<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Super Nova</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Condiment&display=swap"
      rel="stylesheet"
    />

    <!-- Remixicon -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body style="font-family: 'Helvetica Now Display', Arial, sans-serif;">
    <nav
      class="w-full fixed top-0 left-0 px-10 py-4 bg-rose-100 text-black shadow-md z-50 flex justify-between items-center"
    >
      <a href="/shop" class="supernova text-4xl">SuperNova</a>

      <div class="flex items-center gap-6">
        <% var loggedIn = typeof loggedIn !== "undefined" ? loggedIn : true; %>
        <% var isOwnersRoute = currentRoute &&
        currentRoute.startsWith('/owners'); %> <% if (isOwnersRoute) { %>
        <!-- Admin Dashboard Link -->
        <h1 class="text-lg font-bold hover:text-red-700">Admin Dashboard</h1>
        <% } else { %>
        <a href="/cart" class="text-lg hover:text-gray-400">Cart</a>

        <div class="relative group">
          <button class="flex items-center gap-2 text-lg hover:text-gray-400">
            My Account <i class="ri-arrow-down-s-line"></i>
          </button>
          <div
            class="absolute hidden group-hover:flex flex-col bg-gray-800 text-white rounded-md py-2 shadow-lg min-w-[200px] right-0"
          >
            <a href="/profile" class="px-4 py-2 hover:bg-gray-700">Profile</a>
            <a href="/logout" class="px-4 py-2 hover:bg-red-700 text-red-400"
              >Logout</a
            >
          </div>
        </div>
        <a href="/about" class="text-sm hover:text-gray-400">About</a>

        <% } %>
      </div>
    </nav>


  </body>
</html>
