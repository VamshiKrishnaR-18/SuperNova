<%- include('./partials/header') %>

<!-- Flash Messages -->
<div class="fixed top-5 left-1/2 transform -translate-x-1/2 z-50">
    <% if (messages.error && messages.error.length > 0) { %>
        <div id="flash-error" class="bg-red-500 text-white rounded-md px-5 py-3 mb-4 shadow-lg">
            <% messages.error.forEach(function(msg){ %>
                <span><%= msg %></span><br />
            <% }) %>
        </div>
    <% } %>

    <% if (messages.success && messages.success.length > 0) { %>
        <div id="flash-success" class="bg-green-500 text-white rounded-md px-5 py-3 mb-4 shadow-lg text-center">
            <% messages.success.forEach(function(msg){ %>
                <span><%= msg %></span><br />
            <% }) %>
        </div>
    <% } %>
</div>

<div class="min-h-screen flex flex-col bg-gray-100 mt-10">
    <div class="container mx-auto px-8 py-16 flex flex-col">
        
        <a class="text-gray-700 hover:text-blue-500 mb-6" href="/owners/adminDashboard">
            ‚Üê Back to Dashboard
        </a>

        <!-- Main Form -->
        <main class="w-full bg-white shadow-xl rounded-2xl p-10">
            <h2 class="text-3xl font-bold mb-8 text-gray-900">Edit Product</h2>
            <form autocomplete="off" action="/products/<%= product._id %>/edit" method="post" enctype="multipart/form-data" class="space-y-8">
                <!-- Product Image -->
                <div>
                    <label class="block text-lg font-semibold text-gray-800 mb-2">Update product Image</label>
                    <input name="image" type="file" class="border border-gray-300 p-4 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 transition" />
                </div>

                <!-- Product Details -->
                <div>
                    <h3 class="text-2xl font-semibold text-gray-800 mb-4">Update product Details</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input name="name" type="text" placeholder="Product Name" class="border border-gray-300 p-4 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 transition" />
                        <input name="price" type="text" placeholder="Product Price" class="border border-gray-300 p-4 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 transition" />
                        <input name="discount" type="text" placeholder="Discount Price" class="border border-gray-300 p-4 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 transition" />
                    </div>
                </div>

                <!-- Panel Details -->
                <div>
                    <h3 class="text-2xl font-semibold text-gray-800 mb-4">Udate panel Details</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input name="bgcolor" type="text" placeholder="Background Color (e.g., #f5f5f5)" class="border border-gray-300 p-4 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 transition" />
                        <input name="panelcolor" type="text" placeholder="Panel Color (e.g., #ffffff)" class="border border-gray-300 p-4 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 transition" />
                        <input name="textcolor" type="text" placeholder="Text Color (e.g., #333333)" class="border border-gray-300 p-4 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 transition" />
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="w-full bg-blue-600 text-white py-4 rounded-lg font-bold hover:bg-blue-700 transition-all shadow-lg">
                    Update Product
                </button>
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
