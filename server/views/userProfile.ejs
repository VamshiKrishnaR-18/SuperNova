<%- include('./partials/header') %>

<!-- User Profile Container -->
<div class="container mx-auto flex gap-8 px-10 py-20">
  <!-- Sidebar (Sticky) -->
  <aside class="w-1/4 sticky top-20 h-[80vh] w-[220px] overflow-y-auto bg-white shadow-md rounded-lg p-6">
    <!-- Profile Picture -->
    <div class="text-center mb-6">
      <img
        src="<%= user.picture || '/images/default-avatar.png' %>"
        alt="User Avatar"
        class="w-24 h-24 rounded-full mx-auto shadow-lg border-2 border-gray-300"
      />
      <h2 class="text-2xl font-semibold mt-4 text-gray-800"><%= user.fullname %></h2>
      <p class="text-sm text-gray-500"><%= user.email %></p>
      <a href="/logout" class="text-red-500 mt-4 block hover:text-red-600 transition-colors">Logout</a>
    </div>

    <hr class="mb-6" />

    <h3 class="text-lg font-semibold mb-4">User Controls</h3>

    <a class="block mb-2 hover:text-blue-500 transition-colors" href="/user/editProfile">- Edit Profile</a>
    <a class="block mb-2 hover:text-blue-500 transition-colors" href="/user/myOrders">- My Orders</a>
    <a class="block mb-2 hover:text-blue-500 transition-colors" href="/user/settings">- Settings</a>
  </aside>

  <!-- User Details -->
  <div class="flex flex-col w-3/4">
    <h2 class="font-bold text-2xl mb-6 text-gray-800">User Details</h2>
    <div class="bg-white shadow-md rounded-lg p-6 space-y-4">
      <p><span class="font-semibold">Full Name:</span> <%= user.fullname %></p>
      <p><span class="font-semibold">Email:</span> <%= user.email %></p>
      <p><span class="font-semibold">Phone:</span> <%= user.phone || 'Not Provided' %></p>
      <p><span class="font-semibold">Address:</span> <%= user.address || 'Not Provided' %></p>
      <p><span class="font-semibold">Joined On:</span> <%= user.joinedDateFormatted %></p>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
